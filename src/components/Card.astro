---
import FormInputs from './FormInputs.astro';

interface Props {
	title: string;
	questions: string[];
	name: string;
}

const { title, questions, name } = Astro.props;
---

<article class="card-container">
	<header class="card-header">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
	</header>

	<form id=`${name}Form` class="card-form">		
		{questions.map(q => {
			return  <FormInputs name={name} question={q} />
		} )}
	</form>

	<footer class="card-footer">
		<button form=`${name}Form` 
			name=`${name}Submit` 
			class="card-submit"
		>
			Submit
		</button>
	</footer>
</article>

<style>
	.card-container {
		padding: 10px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.card-header:is(:hover, :focus-within) {
		h2 {
			color: rgb(var(--accent-light));
		}
	}
	.card-footer {
		display: flex;
		justify-content: center;
	}
	.card-submit {
		padding: 1px;
		background-size: 400%;
		border-radius: 7px;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		width: 80%;
		height: 27px;
		cursor: pointer;
		
		&:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
		}
	}
	.card-form {
		padding: 0 5px 0 5px;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		text-align: center;
	}
	
</style>
